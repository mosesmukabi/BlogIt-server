generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id String @default(uuid()) @id
  firstName String
  lastName String
  email String @unique
  userName String @unique
  password String
  blogs Blog[]
  @@map("users")
}

model Blog {
   id String @default(uuid()) @id
   title String
   excerpt String 
   body String
   createdAt DateTime @default(now())
   updatedAt DateTime @default(now())
   owner String

   user user @relation(fields: [owner], references: [id] )

   @@map("blogs")

}
